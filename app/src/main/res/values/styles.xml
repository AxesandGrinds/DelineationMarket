<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryLightColor</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="editTextStyle">@style/AppTheme.EditTextStyle</item>
        <item name="textInputStyle">@style/AppTheme.EditTextStyle</item>
    </style>

    <style name="AppTheme.EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/filled_roundededges_box_dark</item>
        <item name="android:textColor">#808080</item>
        <item name="android:layout_height">45dip</item>
    </style>

    <style name="MyCustomTextInputStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/secondaryColor</item>
    </style>



    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="AppTheme.PopupOverlay">

    </style>

    <style name="AppTheme.AppBarOverlay">

    </style>

    <style name="SwitchCompatStyle">

        <item name="thumbTint">@color/primaryColor</item>
        <item name="trackTint">@color/secondaryColor</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

</resources>
